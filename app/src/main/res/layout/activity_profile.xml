<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e4e3e6"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_x="-140dp"
            android:layout_y="-300px"
            android:foregroundGravity="right"
            android:src="@drawable/asset_3" />

        <ImageView
            android:id="@+id/greekShip"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_x="210dp"
            android:layout_y="-350px"
            android:foregroundGravity="right"
            android:src="@drawable/asset_1" />

    </AbsoluteLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/rounded_top_background"
                    android:orientation="vertical">

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/profilePictureCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/rounded_image_background"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_baseline_person_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/namaDepan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePictureCard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_black"
                    android:gravity="center_horizontal"
                    android:text="Nama Penduduk"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tglTercatat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namaDepan"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Tanggal Penduduk Tercatat"
                    android:textSize="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tglTercatat"
                    android:layout_marginTop="5dp"
                    android:background="#f3f3f3"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingHorizontal="15dp"
                        android:textSize="16sp"
                        android:paddingVertical="5dp"
                        android:text="Detail Info"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Nama Lengkap"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsNama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="I Komang Wahyu hadi Permana" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Alamat Lengkap"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailAlamat"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Br. Saba Blahbatuh, Kabupaten Gianyar gang Jepun No. 2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Tanggal lahir"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsTglLahir"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="2dp"
                            android:text="14 januari 2001" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="5dp"
                            android:text="Nomor Telepon"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsNoTelp"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="088219157496" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Gaji Perbulan (Estimasi)"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsGaji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="2dp"
                            android:text="Rp2.000.000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Jenis Kelamin"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/jk"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Pria" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Agama"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsAgama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="2dp"
                            android:text="Hindu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Hobi"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/detailsHobi"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Rebaham, Tiduran, Mandi" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarThemeOrange" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
